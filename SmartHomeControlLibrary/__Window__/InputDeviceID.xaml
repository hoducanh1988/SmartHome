<Window x:Class="SmartHomeControlLibrary.__Window__.InputDeviceID"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHomeControlLibrary.__Window__"
        mc:Ignorable="d"
        Title="Nhập mã ID của sản phẩm test" Height="150" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <StackPanel Margin="5">
        <Label Content="Vui lòng nhập mã ID của sản phẩm cần kiểm tra vào textbox bên dưới đây."/>
        <Label Margin="0,15,0,0" Content="Mã ID của sản phẩm:" FontWeight="SemiBold"/>
        <TextBox x:Name="textbox" KeyDown="TextBox_KeyDown" Background="Yellow" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="20" FontWeight="SemiBold"/>
        
    </StackPanel>
</Window>
